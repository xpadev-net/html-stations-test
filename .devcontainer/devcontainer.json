{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "hostRequirements": {
    "cpus": 2
  },
  "waitFor": "onCreateCommand",
  "updateContentCommand": "yarn install && yarn add http-server",
  "postCreateCommand": "",
  "postAttachCommand": {
    "server": "yarn http-server"
  },
  "customizations": {
    "codespaces": {
      "openFiles": [
        "src/station1.html"
      ]
    }
  },
  "portsAttributes": {
    "3000": {
      "label": "Application",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [8080]
}
